<h1>View Show List</h1>

 <form role="form">
        <div class="form-group">
          <label for="sel1">Select list (select one):</label>
          <select class="form-control" id="showType" onchange= "loadShowEvent()">
       <option value="showByDay" selected="selected">Show By Show Day</option>
           <option value="showByName" >Show By Show Name</option>
          </select>
          <br>
          
        




<!-- <select id="showType" onchange= "loadShowEvent()">
