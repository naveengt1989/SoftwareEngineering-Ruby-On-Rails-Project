<div class="showEventDay" id="showEventDay" style="font:20px bold" text-align="center">
	<select class="form-control" id="showDay" onchange= "loadShowForDay()"  >
	<option value="Select" selected="selected">Select Day</option>
	<option value="Sunday" >Sunday</option>
	<option value="Monday">Monday</option>
	<option value="Tuesday">Tuesday</option>
	<option value="Wednesday">Wednesday</option>
	<option value="Thursday">Thursday</option>
	<option value="Friday">Friday</option>
	<option value="Saturday">Saturday</option>
	</select>

	<div class="showsForDay" >
	</div>

	<br>

</div>


<div class="showEventName" id="showEventName" style="font:25px bold" text-align="center" hidden=true>
	<select  class="form-control"  id="showName" onchange= "loadShowForName()" >
	<option value="Select" selected="selected">Select Name</option>
	<% @radio_shows.each do |radio_show| %>
	<option value="<%= radio_show.id%>" ><%= radio_show.name%></option>
	<% end %>
	</select>

	<div class="showsForName" >
	</div>

	<br>
</div>
  
        </div>
      </form>

<br>

<%= link_to 'New Radio show',new_radio_show_path ,:class =>"btn btn-default btn-sm" %>
</div>
</div>
