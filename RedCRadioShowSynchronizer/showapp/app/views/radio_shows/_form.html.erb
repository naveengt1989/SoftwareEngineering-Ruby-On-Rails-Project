<%= form_for(@radio_show) do |f| %>
  <% if @radio_show.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@radio_show.errors.count, "error") %> prohibited this radio_show from being saved:</h2>

      <ul>
      <% @radio_show.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<% if defined?(@current_user.id) %>
  <%= f.hidden_field :user_id, :value => @current_user.id %>
<% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, :size =>"40" %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description , :size => "40"%>
  </div>

<div id="show_timings">
	<%= f.fields_for :show_timings do |show_timing| %>
      		<%= render "show_timing_fields", :f => show_timing %>
	<% end %>
</div>

 
<div class="links">  
	
	<%= link_to_add_association 'Add Show Timing', f, :show_timings, :class =>"btn btn-default btn-sm" %>
</div>   
  <div class="actions"> 
    <!-- <%= f.submit%> -->
    <%= f.button :Submit, :class =>"btn btn-default btn-sm" %>
  
  </div>
  <div class="view">
  <%= link_to 'View/Edit RadioShows', radio_shows_viewEdit_path , :class =>"btn btn-default btn-sm"%>
  </div>
  
<% end %>

<style>
.links{
	float:left;
	padding-right:10px;
}
.actions{
	float:left;
	padding-right:10px;
}
</style>


